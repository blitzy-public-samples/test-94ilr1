{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@proto/*": ["shared/proto/*"],
      "@models/*": ["shared/models/*"],
      "@utils/*": ["shared/utils/*"],
      "@email/*": ["email-service/*"],
      "@context/*": ["context-engine/*"],
      "@response/*": ["response-generator/*"],
      "@auth/*": ["auth-service/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "shared/**/*",
    "email-service/**/*",
    "context-engine/**/*",
    "response-generator/**/*",
    "auth-service/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/*",
    "**/__mocks__/*"
  ],
  "references": [
    { "path": "./shared" },
    { "path": "./email-service" },
    { "path": "./context-engine" },
    { "path": "./response-generator" },
    { "path": "./auth-service" }
  ]
}