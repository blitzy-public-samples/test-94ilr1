# Application Environment
NODE_ENV=development
LOG_LEVEL=info

# Security Settings
ENCRYPTION_KEY_ROTATION_DAYS=30
SECURITY_AUDIT_ENABLED=true

# API Gateway Configuration
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0
RATE_LIMIT_WINDOW=300000
RATE_LIMIT_MAX_REQUESTS=100
CIRCUIT_BREAKER_THRESHOLD=50
CIRCUIT_BREAKER_TIMEOUT=60000
MAX_REQUEST_SIZE=10mb
ALLOWED_IPS=127.0.0.1,192.168.1.1

# Authentication Configuration (Auth0) - version: ^4.0.0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.yourdomain.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_TOKEN_EXPIRY=3600
AUTH0_ALLOWED_SCOPES=openid,profile,email
AUTH0_ENABLE_MFA=true
AUTH0_RATE_LIMIT_MAX_ATTEMPTS=10
AUTH0_RATE_LIMIT_WINDOW_MS=300000
AUTH0_RETRY_MAX_RETRIES=3
AUTH0_RETRY_BACKOFF_MS=1000

# Database Configuration (PostgreSQL) - version: 14+
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=email_assistant
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SSL_MODE=require
POSTGRES_BACKUP_SCHEDULE=0 0 * * *

# MongoDB Configuration - version: 6.0+
MONGODB_URI=mongodb://localhost:27017/email_assistant
MONGODB_POOL_SIZE=10
MONGODB_SSL_ENABLED=true
MONGODB_REPLICA_SET=rs0

# Redis Configuration - version: 7.0+
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Email Service Configuration
EMAIL_SERVICE_URL=http://email-service:8000
EMAIL_SERVICE_TIMEOUT=60000
EMAIL_SERVICE_MAX_RETRIES=5

# Context Engine Configuration
CONTEXT_SERVICE_URL=http://context-service:8001
CONTEXT_SERVICE_TIMEOUT=30000
CONTEXT_SERVICE_MAX_RETRIES=3

# Response Generator Configuration
RESPONSE_SERVICE_URL=http://response-service:8002
RESPONSE_SERVICE_TIMEOUT=30000
RESPONSE_SERVICE_MAX_RETRIES=3

# Monitoring and Observability
METRICS_PREFIX=email_assistant
METRICS_COLLECTION_INTERVAL=10000
METRICS_RETENTION_DAYS=30
LOGGING_FORMAT=json
APM_SERVICE_NAME=email-assistant
APM_SERVER_URL=http://apm:8200

# High Availability Settings
CLUSTER_ENABLED=true
REPLICA_COUNT=3
HEALTH_CHECK_INTERVAL=30000
FAILOVER_TIMEOUT=5000

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_STORAGE_PATH=/backups

# Feature Flags
FEATURE_AUTO_RESPONSE=true
FEATURE_CONTEXT_ANALYSIS=true
FEATURE_MFA_REQUIRED=true
FEATURE_RATE_LIMITING=true